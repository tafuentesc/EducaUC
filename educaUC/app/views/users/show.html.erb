<%- model_class = User -%>
<div class="page-header">
	<% confirm_string = "" %>
	<% if @user == @logged_user %>
	  <h1><%=t '.title', :default => "Mi Perfil" %></h1>
	  <% confirm_string = "¿Está seguro que desea borrar su cuenta? Toda su información se perderá." %>
	<% else %>
	  <h1><%= "Perfil de Usuario" %></h1>
	  <% confirm_string = "¿Está seguro que desea borrar esta cuenta? Toda su información se perderá." %>
	<% end %>
</div>

<table class="table table-bordered">
	<tr>
		<th>Email:</th>
		<td><%= "#{@user.email}"%></td>
	</tr>
	<tr>
		<th>Nombre Completo:</th>
		<td><%= "#{@user.name} #{@user.lastname}"%></td>
	</tr>
	<tr>
		<th>Rol:</th>
		<td><%= "#{@user.role}"%></td>
	</tr>
</table>

<div class="btn-group float-right">
	<%= link_to "Atrás",
	            users_path, :class => 'btn'  %>
	<%= link_to "Editar Perfil",
	            edit_user_path(@user), :class => 'btn' %>
	<%= link_to "Eliminar Cuenta",
	            user_path(@user),
	            :method => 'delete',
	            :data => { :confirm => "#{confirm_string}" },
	            :class => 'btn btn-danger float-right' %>
</div>
