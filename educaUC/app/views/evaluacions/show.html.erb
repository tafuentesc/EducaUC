<%- model_class = Evaluacion -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:nombre_sala) %>:</strong></dt>
  <dd><%= @evaluacion.nombre_sala %></dd>
  <dt><strong><%= model_class.human_attribute_name(:fecha_de_evaluacion) %>:</strong></dt>
  <dd><%= @evaluacion.fecha_de_evaluacion %></dd>
  <dt><strong><%= model_class.human_attribute_name(:encargado) %>:</strong></dt>
  <dd><%= @evaluacion.encargado %></dd>
  <dt><strong><%= model_class.human_attribute_name(:horario_inicial) %>:</strong></dt>
  <dd><%= @evaluacion.horario_inicial %></dd>
  <dt><strong><%= model_class.human_attribute_name(:horario_final) %>:</strong></dt>
  <dd><%= @evaluacion.horario_final %></dd>
  <dt><strong><%= model_class.human_attribute_name(:estado) %>:</strong></dt>
  <dd><%= @evaluacion.estado %></dd>
  <dt><strong>Centro:</strong></dt>
  <dd><%= @evaluacion.centro.nombre %></dd>
</dl>

<div id="show-escala">
	<%= render :partial => 'escala' %>
</div>

<div id="razon-objecion">
  <%= form_for :objetado, :url => { :action => :objetar } do |form| %>
    <%= form.hidden_field :admin_id, :value => @logged_user.id %>
		<%= form.hidden_field :evaluacion_id, :value => @evaluacion.id %>
   	<p> 
    	<label for="razon">Raz√≥n:</label>
    	<%= form.text_area :razon, :rows => 3, :cols => 40 %>
   	</p>
   	<%= form.submit "Objetar", :class => "submit" %>
   <% end %>
</div>

<%= button_to "Aceptar", :action => "aceptar/#{@evaluacion.id}" %>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              evaluacions_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_evaluacion_path(@evaluacion), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              evaluacion_path(@evaluacion),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
