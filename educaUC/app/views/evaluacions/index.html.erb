<%- model_class = Evaluacion -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:nombre_sala) %></th>
      <th><%= model_class.human_attribute_name(:fecha_de_evaluacion) %></th>
      <th><%= model_class.human_attribute_name(:encargado) %></th>
      <th><%= model_class.human_attribute_name(:horario_inicial) %></th>
      <th><%= model_class.human_attribute_name(:horario_final) %></th>
      <th><%= model_class.human_attribute_name(:estado) %></th>
      <th><%= model_class.human_attribute_name(:razon) %></th>
      <th><%= model_class.human_attribute_name(:centro_id) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @evaluacions.each do |evaluacion| %>
      <tr>
        <td><%= link_to evaluacion.id, evaluacion_path(evaluacion) %></td>
        <td><%= evaluacion.nombre_sala %></td>
        <td><%= evaluacion.fecha_de_evaluacion %></td>
        <td><%= evaluacion.encargado %></td>
        <td><%= evaluacion.horario_inicial %></td>
        <td><%= evaluacion.horario_final %></td>
        <td><%= evaluacion.estado %></td>
        <td><%= evaluacion.razon %></td>
        <td><%= evaluacion.centro_id %></td>
        <td><%=l evaluacion.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_evaluacion_path(evaluacion), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      evaluacion_path(evaluacion),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_evaluacion_path,
            :class => 'btn btn-primary' %>
